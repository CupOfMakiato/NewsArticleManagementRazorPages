@page
@model NguyenLMFall2024RazorPages.Pages.UserManagement.IndexModel
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Index";
}

<!-- Custom Styles -->
<style>
    .tag-name {
        color: white;
        background-color: #17a2b8;
        padding: 0.3em 0.8em;
        border-radius: 0.25rem;
        margin-right: 0.2em;
    }

    /* Styling for Status */
    .status-badge {
        padding: 0.5em 1em;
        border-radius: 0.25rem;
    }

    .status-active {
        background-color: #28a745;
        color: white;
    }

    .status-inactive {
        background-color: #ffc107;
        color: white;
    }

    .status-archived {
        background-color: #dc3545;
        color: white;
    }

    .table thead {
        background-color: #343a40;
        color: white;
    }

    /* Button styling */
    .btn-primary, .btn-warning, .btn-danger, .btn-success {
        margin-bottom: 0.5em;
    }

        .btn-primary:hover, .btn-warning:hover, .btn-danger:hover, .btn-success:hover {
            opacity: 0.85;
        }

    /* Modal styling */
    .modal-header {
        background-color: #343a40;
        color: white;
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        padding: 10px;
        text-align: right;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <h2>Menu</h2>
        <div class="list-group">
            <a href="/UserManagement/Index" class="list-group-item list-group-item-action active">
                Account Management
            </a>
            <a href="/ReportStatistic/Index" class="list-group-item list-group-item-action">
                Statistic Report
            </a>
        </div>
    </div>
    <div class="col-md-9">
        <h2 class="mb-4">User Management</h2>
        <div class="d-flex">
            <a asp-page="Create" class="btn btn-primary fw-bold btn-sm">
                <i class="fas fa-plus"></i> Create New User
            </a>
        </div>

        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Password</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SystemAccount)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                        <td>@Html.DisplayFor(modelItem => item.AccountEmail)</td>
                        <td>
                            @if (item.AccountRole == 1)
                            {
                                <span class="badge bg-primary text-white">Staff</span>
                            }
                            else if (item.AccountRole == 2)
                            {
                                <span class="badge bg-success text-white">Lecturer</span>
                            }
                        </td>
                        <td>
                            @("*" + new string('*', item.AccountPassword.Length - 1))
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a class="btn btn-warning fw-bold updateButton" data-id="@item.AccountId">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <a class="btn btn-danger fw-bold deleteButton" data-id="@item.AccountId">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                                <a class="btn btn-success fw-bold detailsButton" data-id="@item.AccountId">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Details -->
<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModalLabel">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="closeModal()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content loaded via AJAX -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="closeModal()">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle Create, Update, Delete, Details buttons
            $('body').on('click', '.updateButton', function () {
                var id = $(this).data('id');
                window.location.href = '/UserManagement/Edit?id=' + id;
            });

            $('body').on('click', '.deleteButton', function () {
                var id = $(this).data('id');
                window.location.href = '/UserManagement/Delete?id=' + id;
            });

            $('body').on('click', '.detailsButton', function () {
                var id = $(this).data('id');
                $('#formModalLabel').text('Account Details');
                openDetailsModal(id);
            });
        });

        function openDetailsModal(id) {
            $.ajax({
                url: '/UserManagement/Details?id=' + id,
                method: 'GET',
                success: function (data) {
                    $('.modal-body').html(data);
                    $('#formModal').modal('show');
                }
            });
        }

        function closeModal() {
            $('#formModal').modal('hide');
            window.location.href = '/UserManagement/Index';
        }
    </script>
}
